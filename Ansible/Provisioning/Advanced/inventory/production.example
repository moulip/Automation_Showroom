# Example Inventory for WALLIX Bastion Automation
#
# Copy this file and customize for your environment:
#   cp inventory/production.example inventory/production
#
# Then edit with your actual bastion hosts

[wallix_bastions]
# Production bastions
bastion-prod-01 ansible_host=bastion-prod-01.example.com
bastion-prod-02 ansible_host=bastion-prod-02.example.com

# Load balancer (if using)
# bastion-lb ansible_host=bastion.example.com

[wallix_bastions:vars]
# Connection settings
ansible_connection=local
ansible_python_interpreter=python3

# WALLIX API settings (can be overridden in host_vars)
wallix_api_port=443
wallix_api_ssl=true

# Group membership
[production:children]
wallix_bastions

[production:vars]
deployment_environment=production
